<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <meta name="description" content="{{ name.brewerLogName }} is the homebrewing log and recipe collection of {{ brewerName }}. Powered by BrewBlogger {{ version }}.">
    <meta name="robots" content="index,follow,noarchive">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="css/universal_elements.css" type="text/css">

    {% if checkmobile %}
    <link rel="stylesheet" href="css/mobile.css" type="text/css" >
    {% else %}
    <script type="text/javascript" src="js_includes/menu.js"></script>
    <script type="text/javascript" src="js_includes/jquery.js"></script>
    <script type="text/javascript" src="js_includes/thickbox.js"></script>
    <script type="text/javascript" src="js_includes/jump_menu.js"></script>
    <link rel="stylesheet" href="css/thickbox.css" type="text/css" media="screen">
    <link rel="stylesheet" href="css/{{ pref.theme }}" type="text/css">
    {% endif %}

    {% if not checkmobile and page == "reference" and section == "carbonation" %}
        {% if printBrowser == "IE" %}
            <script language="JavaScript" type="text/JavaScript">
            <!--
            function popUp(URL) {
                day = new Date();
                id = day.getTime();
                eval("page" + id + " = window.open(URL, '" + id + "', 'toolbar=0,scrollbars=1,location=0,statusbar=0,menubar=0,resizable=0,width=800,height=600');");
            }
            // -->
            </script>
        {% else %}
            <script>
                $(document).ready(function(){
                    tb_show('Carbonation Chart','reference/carbonation.php?KeepThis=true&TB_iframe=true&height=550&width=900', 'loadingAnimation.gif');
                });
            </script>
        {% endif %}
    {% endif %}
</head>
<body {% if printBrowser == "IE" and page == "reference" and section == "carbonation" %}onLoad="javascript:popUp('reference/carbonation.php')" {% endif %}>

<div id="main-container">
    <!-- Begin Header -->
    <div id="header">
        <div class="titleText">{{ name.brewerFirstName }}{% if pref.mode == 1 and name.brewerFirstName %}'s{% endif %}&nbsp;{{ name.brewerLogName }}</div><div class="quoteText">{{ name.brewerTagline }}</div>
    </div>
    <div id="nav">{{ navigation }}</div>
    <!-- End Header -->
    <!-- Begin Main Content -->
    <div id="content-wrapper">
        <div id="{% if page in ["brewBlogCurrent", "brewBlogDetail", "about", "recipeDetail", "profile"] %}left-column{% else %}content-wide{% endif %}">
            <div id="{% if page in ["brewBlogCurrent", "brewBlogDetail", "about", "recipeDetail", "profile"] %}breadcrumb{% else %}breadcrumbWide{% endif %}">{{ breadcrumb }}</div>
            {% if pref.mode == 2 and pref.home == page and pref.allowNews == "y" and totalRows_newsGen > 0 %}{{ news }}{% endif %}
            <div id="{% if page in ["brewBlogCurrent", "brewBlogDetail", "about", "recipeDetail", "profile"] %}subtitle{% else %}subtitleWide{% endif %}">
                <div id="icon"><img src="{{ imageSrc }}{{ icon }}.png" align="bottom"></div>
                {% if page == "brewBlogCurrent" %}
                {{ log.brewName }}
                {% elseif page == "brewBlogDetail" %}
                    {% if pref.mode == 1 %}
                        {{ log.brewName }}
                    {% else %}
                        BrewBlog: {{ log.brewName }}
                    {% endif %}
                {% elseif page == "recipeDetail" %}
                    {% if pref.mode == 1 %}
                        {{ log.brewName }}
                    {% else %}
                        Recipe: {{ log.brewName }}
                    {% endif %}
                {% elseif page == "about" %}
                    {{ page_title }}{{ page_title_extension }}
                {% elseif page == "login" %}
                    {{ page_title }}{{ page_title_extension }}
                {% else %}
                    {{ page_title }}
                {% endif %}
            </div> <!-- end subtitle or subtitleWide -->
    {{ body }}
</div><!-- End left-column -->

{% if page in ["brewBlogCurrent", "brewBlogDetail", "about", "recipeDetail", "profile"] %}
<div id="right-column">
    {{ topSidebar }}
    {% if pref.mode == "2" and filter != "all" %}
    <div id="sidebarWrapper"><span class="text_9"><span class="data-icon"><img src="{{ imageSrc }}calendar_view_month.png" alt="Calendar" border="0" align="absmiddle"></span><span class="data"><a href="index.php?page=calendar&filter={{ filter|url_encode }}">View {{ user2.realFirstName }}'s Brewing Calendar</a></span></span></div>
    {% endif %}
    {{ bottomSidebar }}
</div><!-- End right-column -->
{% endif %}
</div><!-- End contentWrapper -->
<!-- End Main Content -->

<!-- Begin Footer -->
<div id="footer">{{ footer }}</div>
<!-- End Footer -->

</div><!-- End Main Container -->
</body>
</html>
