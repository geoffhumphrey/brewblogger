# No indexing
IndexIgnore *

# Make sure index.php is the default page
DirectoryIndex index.php

RewriteEngine on
# If storing your installation in a sub-folder, uncomment the following line and replace [subfolder] with the name of your subfolder
# RewriteBase /[subfolder]
# $page, $section, $action, $dbTable, $filter, $id
RewriteRule ^$ index.php [L]
RewriteRule ^([A-Za-z0-9-]+)?$ index.php?page=$1 [L]
RewriteRule ^([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/?$ index.php?page=$1&section=$2 [L]
RewriteRule ^([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/?$ index.php?page=$1&section=$2&action=$3 [L]
RewriteRule ^([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/?$ index.php?page=$1&section=$2&action=$3&dbTable=$4 [L]
RewriteRule ^([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/?$ index.php?page=$1&section=$2&action=$3&dbTable=$4&filter=$5 [L]
RewriteRule ^([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/([A-Za-z0-9-]+)/?$ index.php?page=$1&section=$2&action=$3&dbTable=$4&filter=$5&id=$6 [L]
RewriteRule ^.*user_docs/.*\.pdf$ - [F,NC,L]

# Custom error pages
ErrorDocument 404     /404.php
ErrorDocument 401     /401.php
ErrorDocument 403     /403.php
ErrorDocument 404     /404.php
ErrorDocument 500     /500.html

